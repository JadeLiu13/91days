class CustomStack(object):

    def __init__(self, maxSize):
        """
        :type maxSize: int
        """
        self.maxSize=maxSize
        self.stack=[]


    def push(self, x):
        if len(self.stack)<self.maxSize:
            self.stack.append(x)


    def pop(self):
        if len(self.stack)==0:
            return -1
        return self.stack.pop()


    def increment(self, k, val):
        if len(self.stack)<k:
            for i in range(len(self.stack)):
                self.stack[i]+=val
        else:
            for i in range(k):
                self.stack[i]+=val
        return self.stack
